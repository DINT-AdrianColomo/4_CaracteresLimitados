<Window x:Class="_4_CaracteresLimitados.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4_CaracteresLimitados"
        mc:Ignorable="d"
        Title="Texto limitado" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="Black"/>
                <GradientStop Color="#FFE26969" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>
        <TextBox x:Name="caracteresTextBox" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="736" Height="327" Margin="0,41,0,0" FontSize="15" TextChanged="TextBox_TextChanged" AcceptsReturn="True"/>
        <TextBlock x:Name="contadorTextBlock" HorizontalAlignment="Left" Margin="686,373,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Foreground="#FFF3F3F3"><Run Language="es-es" Text="0/140"/></TextBlock>

    </Grid>
</Window>
